<% if reply_to && user %>
  <div class="reply-to-block" data-reply-to-id="<%= reply_to.id %>">
    <div class="info">
      <%= t("topics.reply_to1") %>
      <% if show_body %>
        <%= user_avatar_tag(user, :xs, anonymous: reply_to.anonymous) %><%= user_name_tag(user, anonymous: reply_to.anonymous, log: true) %>
      <% else %>
        <%= link_to reply_to_topic_reply_path(@topic, reply), remote: true do %>
          <%= user_avatar_tag(user, :xs, link: false, anonymous: reply_to.anonymous) %><span class="user-name"><%= reply_to.anonymous ? t("common.unknow_user") : user.login %></span>
          <span class='reply-floor'></span>
        <% end %>
      <% end %>
      <%= t("topics.reply_to2") %>
    </div>
    <% if show_body %>
    <div class="markdown">
      <%= markdown(reply_to.body) %>
    </div>
    <% end %>
  </div>
<% end %>
